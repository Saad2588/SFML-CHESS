{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build sfml-chess",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/*.cpp",
                "-Iinclude",
                "-o", "sfml-chess",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$gcc"]
        }
    ]
}
